<!--Home Page  -->
<div id="wrap">
<body>

    <!-- Header buttons -->
    <div id="header-btn-container">
      <%= link_to "Our team", '/tweets/ourteam', :class => "btn btn-primary btn-large header-btn"%>
      <%= link_to "Home", '/tweets/home', :class => "btn btn-primary btn-large header-btn"%>
    </div>

    <!-- Search bar -->
    <div id="search-bar-wrapper">
            <a class="headertitle" href="/tweets/home"><div class="twxplorer-header twxplorer-detail header-normal">tw<div class="twxplorer-x-detail twxplorer-header">x</div>plorer</div></a>
      <div class="test" style="display: inline">
      <%= form_tag '/searchedtweets/index', :id => 'submit-search-form', :onsubmit => 'return validate(this)', :method => :get do %>
        <p>
            <%= text_field_tag :search, params[:search], :class => 'search-input search-input-detail', :placeholder => 'search for tweets' %>
            <%= submit_tag "", :name => nil, :id => 'submit-button', :class =>'btn btn-primary btn-large search-btn-detail' %>
        </p>
      <% end %>
      </div>
    </div>
    
    <div id="breadcrumbs-wrapper" style="height: 20px">
    </div>

    <!-- Graph and tweets sidebar -->
    <div id="main-wrap">
      <p class="what-to-search">What would you like to search for today?</p>
      <div id = "circlecontainer">
        <img style="width: 1200px; margin-left: 50px" src="/images/circles-big.png">
      </div>
    </div>
</body>
</div>

 <!-- Footer -->
 <div id="footer">
