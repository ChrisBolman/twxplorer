<!-- Landing Page -->

<div id="wrap">
  <body>
    <!-- Navbar -->
    <div class="navbar navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="#">twXplorer</a>
        </div>
      </div>
    </div>

    <!-- Logo -->
      <div class="landing">
        <center>
        <div class="header-wrapper">
        <div class="twxplorer-header header-normal">tw<div class="twxplorer-x twxplorer-header">x</div>plorer</div>
      </div>
    </center>

    <!-- Search bar -->
    <center>
    <%= form_tag '/searchedtweets/index', :method => :get do %>
     <p>
       <div class="search-button">
         <%= text_field_tag :search, params[:search], :class => 'search-input search-input-home' %>
         <%= submit_tag "Search for Tweets", :name => nil, :class =>'btn btn-primary btn-large' %>
       </div>
     </p>
    <% end %>
    </center>
    </div>
  </body>

  <!-- For footer -->
  <div id="push"></div>
  </div>

  <!-- Footer -->
  <div id="footer">
    <div class="container">
      <p class="muted credit">Built by Team <a href="#">twXplorer</a>: Allen Zeng, Jeanette Huang, and Miguel Huerta <br> Innovation in Technology and Journalism · Spring 2013 · Northwestern University</p>
    </div>
  </div>